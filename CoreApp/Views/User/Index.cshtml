@model IEnumerable<CoreApp.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "User List";
}

<h4 class="text-info">Application Users</h4>

<p>
    <a class="btn btn-outline-info" asp-area="Identity" asp-page="/Account/Register">Create New User</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>User Id</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>
                <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@user.Id">Details</a>
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
